<%= content_tag :header, class: "navbar navbar-fixed-top navbar-inverse" do %>
  <%= content_tag :div, class: "container" do %>
    <%= link_to "E-learning", root_path, id: "logo" %>
    <%= content_tag :nav do %>
      <%= content_tag :ul, class: "nav navbar-nav navbar-right" do %>
        <%= content_tag :li do %>
          <%= link_to "Home", root_path %>
        <% end %>
        <%= content_tag :li do %>
          <%= link_to "Help", help_path %>
        <% end %>
        <% if user_signed_in? %>
          <%= content_tag :li do %>
            <%= link_to "Users", users_path %>
          <% end %>
          <%= content_tag :li, class: "dropdown" do %>
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= avatar_for current_user, size: 20 %>
              <%= current_user.name.split[0] %>
              <%= content_tag :b, '', class: "caret" %>
            <% end %>
            <%= content_tag :ul, class: "dropdown-menu" do %>
              <%= content_tag :li do %>
                <%= link_to "Profile", "#" %>
              <% end %>
              <%= content_tag :li do %>
                <%= link_to "Settings", edit_user_registration_path(current_user) %>
              <% end %>
              <%= content_tag :li, '', class: "divider" %>
              <%= content_tag :li do %>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              <% end %>
            <% end %>
          <% end %>
        <% else %>
          <%= content_tag :li do %>
            <%= link_to "Log in", new_user_session_path %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
